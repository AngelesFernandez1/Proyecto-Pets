<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/stylesheets/addPet.css" />
    <title>Añadir una mascota</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&family=Raleway:ital,wght@0,100..900;1,100..900&family=Road+Rage&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('modules/navbar.ejs') %>

    <main>
      <section>
        <div class="container-xxl">
          <div
            class="d-flex flex-column align-items-center justify-content-center p-5"
          >
            <form
              action="/pets/registerPet"
              method="post"
              enctype="multipart/form-data"
              class="p-4 d-flex flex-column align-items-center"
            >
              <div>
                <h2>Añadir una Mascota</h2>
              </div>
              <div>
                <img src="/assets/logo.png" alt="imagen del logo" />
              </div>
              <div class="mb-3">
                <label class="form-label">Nombre *</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Nombre"
                  name="pet_name"
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Descripción *</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Descripción"
                  name="description"
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Año de adopción *</label>
                <input
                  type="number"
                  min="1901"
                  max="2100"
                  class="form-control"
                  placeholder="Año de adopción"
                  name="year_of_adoption"
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Especie *</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Especie"
                  name="species"
                />
              </div>
              <div>
                <select class="p-1" name="user_id">
                  <option disabled selected>Elige el propietario</option>
                  <% result.forEach((elem)=>{ %>
                  <option value="<%= elem.user_id %>">
                    <%= elem.user_name %>
                  </option>
                  <% }) %>
                </select>
              </div>
              <div>
                <span>
                  <%= typeof message != 'undefined' ? message : null %>
                </span>
              </div>
              <div class="mb-3">
                <label for="FileInput" class="p-2">Añadir una imagen</label>
                <input
                  type="file"
                  id="FileInput"
                  class="form-control"
                  name="img"
                  hidden
                />
              </div>

              <div>
                <button type="submit">Guardar datos</button>
                <button type="reset">Limpiar</button>
                <button type="button" onclick="window.location.href='/'">
                  Cancelar
                </button>
              </div>
            </form>
          </div>
        </div>
      </section>
    </main>

    <%- include('modules/footer.ejs') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
