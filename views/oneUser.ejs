<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/stylesheets/oneUser.css" />
    <title>Perfil de usuario</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&family=Raleway:ital,wght@0,100..900;1,100..900&family=Road+Rage&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header><%- include('modules/navbar.ejs') %></header>
    <main>
      <section class="user p-5">
        <div class="container-xxl">
          <div class="row row-gap-4 justify-content-center">
            <div class="col-12 col-lg-5 d-flex justify-content-center">
              <img
                src="/images/users/<%= resultUser.user_image?resultUser.user_image: 'defaultUser.png' %>"
                alt="foto del usuario"
              />
            </div>
            <div
              class="col-12 col-lg-7 d-flex align-items-center justify-content-center"
            >
              <article class="d-flex flex-column gap-3 text-center">
                <h2 class="fw-bold">
                  <%= resultUser.user_name %> <%= resultUser.user_lastname %>
                </h2>
                <p><%= resultUser.description %></p>
                <p>Contacto: <%= resultUser.email %></p>
                <p>Tel√©fono: <%= resultUser.phone_number %></p>
                <div>
                  <button
                    onclick="window.location.href='/users/editUser/<%= resultUser.user_id %>'"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="currentColor"
                      class="bi bi-pencil-square"
                      viewBox="0 0 16 16"
                    >
                      <path
                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                      />
                      <path
                        fill-rule="evenodd"
                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"
                      />
                    </svg>
                  </button>
                  <button
                    class="delete"
                    onclick="window.location.href='/users/deleteUser/<%= resultUser.user_id %>'"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="currentColor"
                      class="bi bi-trash"
                      viewBox="0 0 16 16"
                    >
                      <path
                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"
                      />
                      <path
                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"
                      />
                    </svg>
                  </button>
                </div>
              </article>
            </div>
          </div>
        </div>
      </section>

      <section class="mascotas p-5">
        <div class="container-xxl">
          <div class="row row-gap-4 justify-content-center">
            <div class="col-12 text-center">
              <h2 class="fw-bold pb-3 fs-1">Mis Mascotas</h2>
            </div>
            <% resultPet.forEach((elem)=>{ %>

            <div class="col-12 col-md-6 col-lg-4">
              <article>
                <div class="card shadow">
                  <a href="/pets/onePet/<%= elem.pet_id %>"
                    ><img
                      src="/images/pets/<%= elem.pet_image?elem.pet_image: 'defaultPet.webp' %>"
                      class="card-img-top"
                      alt="imagen de la mascota"
                    />
                  </a>
                  <div class="card-body text-center">
                    <h3 class="card-title fw-bolder"><%= elem.pet_name %></h3>
                    <p class="card-text"><%= elem.description %></p>
                    <button
                      onclick="window.location.href='/pets/editPet/<%= elem.pet_id %>'"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="currentColor"
                        class="bi bi-pencil-square"
                        viewBox="0 0 16 16"
                      >
                        <path
                          d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                        />
                        <path
                          fill-rule="evenodd"
                          d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"
                        />
                      </svg>
                    </button>
                  </div>
                </div>
              </article>
            </div>
            <% })%>
          </div>
        </div>
      </section>
    </main>

    <%- include('modules/footer.ejs') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
